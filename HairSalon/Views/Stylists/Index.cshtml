@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
  {
  <h3>No stylists exist!</h3>
  } 
else
  {
  <ul>
    @foreach(Stylist stylist in Model)
    {
        <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>
  <div class="Client">
  <p>@Html.ActionLink("Add new client", "Create", "Clients")</p>
  <p>@Html.ActionLink("View all clients", "Index", "Clients")</p>
  </div>
  }
<div class="Stylist">
<p>@Html.ActionLink("Add new stylist", "Create")</p>
</div>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

